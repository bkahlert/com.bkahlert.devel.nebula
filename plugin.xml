<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="id2"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="com.bkahlert.devel.nebula.Application">
         </run>
      </application>
   </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.bkahlert.devel.nebula.Perspective"
            id="de.fu_berlin.imp.seqan.usability_analyzer.nebula.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.bkahlert.devel.nebula.views.WidgetsView"
            id="de.fu_berlin.imp.seqan.usability_analyzer.nebula.ui.views.WidgetsView"
            name="Widgets"
            restorable="true">
      </view>
      <view
            class="com.bkahlert.devel.nebula.views.SampleEditorView"
            id="de.fu_berlin.imp.seqan.usability_analyzer.nebula.ui.views.SampleEditorView"
            name="Sample Editor"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.bkahlert.devel.nebula.toggleSourceMode"
            name="Toggle Source Mode">
         <state
               id="org.eclipse.ui.commands.toggleState">
            <class
                  class="org.eclipse.ui.handlers.RegistryToggleState">
               <parameter
                     name="default"
                     value="false">
               </parameter>
               <parameter
                     name="persisted"
                     value="false">
               </parameter>
            </class>
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.bkahlert.devel.nebula.toggleSourceMode"
            icon="icons/elcl16/sourceMode_tsk.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.bkahlert.devel.nebula.handlers.ToggleSourceModeHandler"
            commandId="com.bkahlert.devel.nebula.toggleSourceMode">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.bkahlert.devel.nebula.utils.KeyboardUtils">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.bkahlert.devel.nebula.commands.EditorDemoInformationControl"
            name="Editor Demo InformationPopup">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.bkahlert.devel.nebula.handlers.EditorDemoInformationControl"
            commandId="com.bkahlert.devel.nebula.commands.EditorDemoInformationControl">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.bkahlert.nebula.information?after=additions">
         <command
               commandId="com.bkahlert.devel.nebula.commands.EditorDemoInformationControl"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
