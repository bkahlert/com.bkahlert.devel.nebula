<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender class="org.apache.log4j.ConsoleAppender" name="com.bkahlert.nebula.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout" />
	</appender>
	<logger name="com.bkahlert.nebula.utils">
		<level value="warn" />
	</logger>
	<logger name="com.bkahlert.nebula.widgets.browser">
		<level value="warn" />
	</logger>
	<logger name="com.bkahlert.nebula.utils.ExpressionDebugger">
		<level value="debug" />
	</logger>
	<logger name="com.bkahlert.nebula.information">
		<level value="warn" />
	</logger>
	<root>
		<level value="warn" />
		<appender-ref ref="com.bkahlert.nebula.ConsoleAppender" />
	</root>
</log4j:configuration>